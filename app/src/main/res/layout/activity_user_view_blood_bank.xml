        app:layout_constraintStart_toStartOf="@+id/tv_AMinus"
        app:layout_constraintTop_toTopOf="@+id/ed_BPlusAmount" />

    <TextView
        android:id="@+id/tv_APlus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#F79489"
        android:text=" A+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_APlusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_APlusAmount"
        app:layout_constraintStart_toStartOf="@+id/tv_BPlus"
        app:layout_constraintTop_toTopOf="@+id/ed_APlusAmount" />

    <TextView
        android:id="@+id/tv_bloodBankQtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Blood Group Quantity"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ed_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <TextView
        android:id="@+id/tv_OPlus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="65dp"
        android:background="#F79489"
        android:text=" O+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ed_ABPlusAmount"
        app:layout_constraintStart_toStartOf="@+id/tv_ABPlus"
        app:layout_constraintTop_toBottomOf="@+id/tv_bloodBankQtt" />

    <TextView
        android:id="@+id/tv_ABMinus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="58dp"
        android:background="#F79489"
        android:text=" AB-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_phone"
        app:layout_constraintEnd_toEndOf="@+id/ed_ABMinusAmount"
        app:layout_constraintTop_toTopOf="@+id/ed_OMinusAmount" />

    <EditText
        android:id="@+id/ed_ABMinusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ABMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ABMinus" />

    <TextView
        android:id="@+id/tv_OMinus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="119dp"
        android:background="#F79489"
        android:text=" O-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_phone"
        app:layout_constraintEnd_toStartOf="@+id/ed_ABMinusAmount"
        app:layout_constraintStart_toStartOf="@+id/btn_phone"
        app:layout_constraintTop_toTopOf="@+id/ed_OPlusAmount" />

    <TextView
        android:id="@+id/tv_ABPlus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="122dp"
        android:background="#F79489"
        android:text="AB+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_ABMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_OMinusAmount"
        app:layout_constraintStart_toStartOf="@+id/tv_OMinus"
        app:layout_constraintTop_toBottomOf="@+id/tv_bloodBankQtt" />

    <EditText
        android:id="@+id/ed_OPlusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_OPlus"
        app:layout_constraintEnd_toEndOf="@+id/ed_ABPlusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_OPlus"
        app:layout_constraintTop_toTopOf="@+id/tv_OPlus" />

    <EditText
        android:id="@+id/ed_ABPlusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ABPlus"
        app:layout_constraintEnd_toEndOf="@+id/ed_OMinusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_ABPlus"
        app:layout_constraintTop_toTopOf="@+id/tv_ABPlus" />

    <EditText
        android:id="@+id/ed_OMinusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_OMinus"
        app:layout_constraintEnd_toEndOf="@+id/ed_ABMinusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_OMinus"
        app:layout_constraintTop_toTopOf="@+id/tv_OMinus" />

    <EditText
        android:id="@+id/ed_BPlusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ABPlus"
        app:layout_constraintEnd_toEndOf="@+id/ed_AMinusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_AMinus"
        app:layout_constraintTop_toTopOf="@+id/tv_ABPlus" />

    <EditText
        android:id="@+id/ed_BMinusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ABMinus"
        app:layout_constraintEnd_toEndOf="@+id/btn_email"
        app:layout_constraintStart_toStartOf="@+id/btn_email"
        app:layout_constraintTop_toTopOf="@+id/tv_ABMinus" />

    <EditText
        android:id="@+id/ed_location"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_bloodBankQtt"
        app:layout_constraintStart_toEndOf="@+id/tv_location"
        app:layout_constraintTop_toTopOf="@+id/tv_bloodBank" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Location :"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bloodBank"
        app:layout_constraintTop_toBottomOf="@+id/tv_bloodBank" />

    <EditText
        android:id="@+id/ed_AMinusAmount"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_BMinus"
        app:layout_constraintEnd_toEndOf="@+id/ed_BMinusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_BMinus"
        app:layout_constraintTop_toBottomOf="@+id/tv_BPlus" />

    <TextView
        android:id="@+id/tv_bloodBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Blood Bank"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_BMinus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#F79489"
        android:text=" B-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_BMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_BMinusAmount"
        app:layout_constraintTop_toTopOf="@+id/ed_BMinusAmount" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#C85250"
        android:text="Email"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#C85250"
        android:text="Phone"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>