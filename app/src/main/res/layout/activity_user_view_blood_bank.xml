<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE5E0"
    tools:context=".UserViewBloodBank">

    <TextView
        android:id="@+id/tv_BloodBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="32dp"
        android:text="Blood Bank"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_location"
        app:layout_constraintStart_toEndOf="@+id/tv_location"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="107dp"
        android:text="Location:"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_AMinus"
        app:layout_constraintEnd_toStartOf="@+id/ed_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="35dp"
        android:hint="type in location"
        app:layout_constraintBottom_toTopOf="@+id/tv_BloodGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_BloodBank" />

    <TextView
        android:id="@+id/tv_BloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="41dp"
        android:text="Blood Group Quantity"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_AMinusAmount"
        app:layout_constraintEnd_toEndOf="@+id/ed_location"
        app:layout_constraintTop_toBottomOf="@+id/ed_location" />

    <TextView
        android:id="@+id/tv_AMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="31dp"
        android:background="#F79489"
        android:text=" A-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_BMinus"
        app:layout_constraintEnd_toStartOf="@+id/ed_AMinusAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <EditText
        android:id="@+id/ed_AMinusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="31dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_BMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/tv_APlus"
        app:layout_constraintStart_toEndOf="@+id/tv_AMinus"
        app:layout_constraintTop_toBottomOf="@+id/tv_BloodGroup" />

    <TextView
        android:id="@+id/tv_BMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="31dp"
        android:background="#F79489"
        android:text=" B-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_OMinus"
        app:layout_constraintEnd_toStartOf="@+id/ed_BMinusAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_AMinus" />

    <EditText
        android:id="@+id/ed_BMinusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="31dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_OMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/tv_BPlus"
        app:layout_constraintStart_toEndOf="@+id/tv_BMinus"
        app:layout_constraintTop_toBottomOf="@+id/ed_AMinusAmount" />

    <TextView
        android:id="@+id/tv_OMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="36dp"
        android:background="#F79489"
        android:text=" O-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ABMinus"
        app:layout_constraintEnd_toStartOf="@+id/tv_OPlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_BMinus" />

    <EditText
        android:id="@+id/ed_OMinusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:layout_marginBottom="36dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_ABMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_OPlusAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_BMinusAmount" />

    <TextView
        android:id="@+id/tv_ABMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="131dp"
        android:background="#F79489"
        android:text=" AB-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_ABMinusAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_OMinus" />

    <EditText
        android:id="@+id/ed_ABMinusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="28dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Phone"
        app:layout_constraintEnd_toStartOf="@+id/tv_ABPlus"
        app:layout_constraintStart_toEndOf="@+id/tv_ABMinus"
        app:layout_constraintTop_toBottomOf="@+id/ed_OMinusAmount" />

    <TextView
        android:id="@+id/tv_APlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F79489"
        android:text=" A+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_APlusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_APlusAmount"
        app:layout_constraintStart_toEndOf="@+id/ed_AMinusAmount"
        app:layout_constraintTop_toTopOf="@+id/ed_APlusAmount" />

    <TextView
        android:id="@+id/tv_BPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F79489"
        android:text=" B+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_BPlusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_BPlusAmount"
        app:layout_constraintStart_toEndOf="@+id/ed_BMinusAmount"
        app:layout_constraintTop_toTopOf="@+id/ed_BPlusAmount" />

    <EditText
        android:id="@+id/ed_BPlusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="31dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_OPlusAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_BPlus"
        app:layout_constraintTop_toBottomOf="@+id/ed_APlusAmount" />

    <TextView
        android:id="@+id/tv_OPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F79489"
        android:text=" O+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_OPlusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_OPlusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_OMinus"
        app:layout_constraintTop_toTopOf="@+id/ed_OPlusAmount" />

    <EditText
        android:id="@+id/ed_OPlusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="36dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_ABPlusAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_OMinusAmount"
        app:layout_constraintTop_toBottomOf="@+id/ed_BPlusAmount" />

    <TextView
        android:id="@+id/tv_ABPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F79489"
        android:text=" AB-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_ABPlusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_ABPlusAmount"
        app:layout_constraintStart_toEndOf="@+id/ed_ABMinusAmount"
        app:layout_constraintTop_toTopOf="@+id/ed_ABPlusAmount" />

    <EditText
        android:id="@+id/ed_ABPlusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="28dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_ABPlus"
        app:layout_constraintTop_toBottomOf="@+id/ed_OPlusAmount" />

    <EditText
        android:id="@+id/ed_APlusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="31dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_BPlusAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_APlus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:backgroundTint="#C85250"
        android:text="EMAIL"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Phone"
        app:layout_constraintEnd_toStartOf="@+id/btn_Phone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="55dp"
        android:backgroundTint="#C85250"
        android:text="PHONE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Email"
        app:layout_constraintTop_toBottomOf="@+id/ed_ABPlusAmount" />


</androidx.constraintlayout.widget.ConstraintLayout>