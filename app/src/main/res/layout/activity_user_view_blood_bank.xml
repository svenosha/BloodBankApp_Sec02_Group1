<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserViewBloodBank">

    <TextView
        android:id="@+id/tv_AMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F79489"
        android:text=" A-"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_AMinusAmount"
        app:layout_constraintEnd_toStartOf="@+id/ed_AMinusAmount"
        app:layout_constraintStart_toStartOf="@+id/tv_BMinus"
        app:layout_constraintTop_toTopOf="@+id/ed_AMinusAmount" />

    <EditText
        android:id="@+id/ed_APlusAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FEECC3"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_OPlus"
        app:layout_constraintEnd_toEndOf="@+id/ed_BPlusAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_BPlus"
        app:layout_constraintTop_toTopOf="@+id/tv_OPlus" />

    <TextView
        android:id="@+id/tv_BPlus"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="#F79489"
        android:text=" B+"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ed_BPlusAmount"
